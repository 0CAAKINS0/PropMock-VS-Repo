@model PropMockModels.Product

@{
    ViewData["Title"] = "DisplayLSProductDetails";
}

<h1>Product Details</h1>

<div>
    <h4>File # @Html.DisplayFor(model => model.filenumber)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lien.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lien.Street)
        </dd>
        <dt class = "col-sm-2">
            Product Type
        </dt>
        <dd class = "col-sm-10">
            @Model?.ProductType.ToString().Replace("_", " ")
        </dd>
        <dt class = "col-sm-2">
            Order Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class = "col-sm-2">
            Client File #
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Clientfilenumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.filenumber">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
